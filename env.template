# Regulator Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM Configuration (Required for chat features and LLM detection)
# =============================================================================

# OpenAI API Key for LLM-based collusion detection
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Optional Configuration
# =============================================================================

# LLM Model Configuration
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=500

# Confidence threshold for LLM detection (0.0 to 1.0)
LLM_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# Development Configuration
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode for development
DEBUG=false

# =============================================================================
# Dashboard Configuration
# =============================================================================

# Streamlit configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# =============================================================================
# Experiment Configuration
# =============================================================================

# Default experiment parameters
DEFAULT_EPISODES=10
DEFAULT_STEPS=100
DEFAULT_FIRMS=3

# =============================================================================
# Example Usage:
# =============================================================================
# 1. Copy this file: cp env.template .env
# 2. Edit .env with your actual OpenAI API key
# 3. Run the application: docker-compose up dashboard
# 4. Access dashboard at: http://localhost:8501
#
# For development with hot reload:
# docker-compose --profile dev up dashboard-dev
#
# For running experiments via CLI:
# docker-compose --profile cli run cli experiment --steps 50 --firms "random,tit_for_tat"
#
# For smoke tests in CI:
# docker-compose --profile test up smoke-test
